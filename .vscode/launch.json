    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch WPF (x64 Debug)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}\\VPet-Simulator.Windows\\bin\\x64\\Debug\\net8.0-windows\\VPet-Simulator.Windows.exe",
            "cwd": "${workspaceFolder}\\VPet-Simulator.Windows\\bin\\x64\\Debug\\net8.0-windows",
            "console": "internalConsole",
            "stopAtEntry": false,
            "justMyCode": true,
            "requireExactSource": false
        },
        {
            "name": "Attach to VPet-Simulator.Windows.exe",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}